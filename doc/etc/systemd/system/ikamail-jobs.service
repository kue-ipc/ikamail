[Unit]
Description=Job for Ikamail Web App
After=network.target remote-fs.target nss-lookup.target

[Service]
Type=simple
EnvironmentFile=/etc/sysconfig/ikamail
WorkingDirectory=/opt/ikamail
User=ikamail
Group=ikamail
ExecStart=/opt/ikamail/bin/jobs start
Restart=on-failure

[Install]
WantedBy=multi-user.target
